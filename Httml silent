<script>
/* ---------------------------
   UI interactions & behavior
   --------------------------- */
// Overlay elements
const extraOverlay = document.getElementById('extraOverlay');
const openExtraTop = document.getElementById('openExtraTop');
const closeExtra = document.getElementById('closeExtra');

const premiumOverlay = document.getElementById('premiumOverlay');
const openPremium = document.getElementById('openPremium');
const closePremium = document.getElementById('closePremium');

const faqOverlay = document.getElementById('faqOverlay');
const openFaqNav = document.getElementById('navFaq');
const closeFaq = document.getElementById('closeFaq');

const privacyOverlay = document.getElementById('privacyOverlay');
const openPrivacy = document.getElementById('openPrivacy');
const closePrivacy = document.getElementById('closePrivacy');

const termsOverlay = document.getElementById('termsOverlay');
const openTermsNav = document.getElementById('navTerms');
const closeTerms = document.getElementById('closeTerms');

// New overlays for Support, Legal, and Contact
const supportOverlay = document.getElementById('supportOverlay');
const openSupport = document.getElementById('openSupport');
const closeSupport = document.getElementById('closeSupport');

const legalOverlay = document.getElementById('legalOverlay');
const openLegal = document.getElementById('openLegal');
const closeLegal = document.getElementById('closeLegal');

const contactOverlay = document.getElementById('contactOverlay');
const openContact = document.getElementById('openContact');
const closeContact = document.getElementById('closeContact');

// open/close helpers
function openOverlay(el) { 
  el.classList.add('active'); 
  el.setAttribute('aria-hidden','false');
  document.body.style.overflow = 'hidden';
}
function closeOverlay(el){ 
  el.classList.remove('active'); 
  el.setAttribute('aria-hidden','true');
  document.body.style.overflow = 'auto';
}

// Extra Bonus
openExtraTop.addEventListener('click', ()=> openOverlay(extraOverlay));
closeExtra.addEventListener('click', ()=> closeOverlay(extraOverlay));
extraOverlay.addEventListener('click', (e)=> { if(e.target === extraOverlay) closeOverlay(extraOverlay); });

// Premium center
openPremium.addEventListener('click', ()=> openOverlay(premiumOverlay));
closePremium.addEventListener('click', ()=> closeOverlay(premiumOverlay));
premiumOverlay.addEventListener('click', (e)=> { if(e.target === premiumOverlay) closeOverlay(premiumOverlay); });

// FAQ nav opens popup
openFaqNav.addEventListener('click', (e)=>{ e.preventDefault(); openOverlay(faqOverlay); });
closeFaq.addEventListener('click', ()=> closeOverlay(faqOverlay));
faqOverlay.addEventListener('click', (e)=> { if(e.target === faqOverlay) closeOverlay(faqOverlay); });

// Privacy
openPrivacy.addEventListener('click', ()=> openOverlay(privacyOverlay));
closePrivacy.addEventListener('click', ()=> closeOverlay(privacyOverlay));
privacyOverlay.addEventListener('click', (e)=> { if(e.target === privacyOverlay) closeOverlay(privacyOverlay); });

// Terms
openTermsNav.addEventListener('click', (e)=>{ e.preventDefault(); openOverlay(termsOverlay); });
closeTerms.addEventListener('click', ()=> closeOverlay(termsOverlay));
termsOverlay.addEventListener('click', (e)=> { if(e.target === termsOverlay) closeOverlay(termsOverlay); });

// Support
openSupport.addEventListener('click', ()=> openOverlay(supportOverlay));
closeSupport.addEventListener('click', ()=> closeOverlay(supportOverlay));
supportOverlay.addEventListener('click', (e)=> { if(e.target === supportOverlay) closeOverlay(supportOverlay); });

// Legal
openLegal.addEventListener('click', ()=> openOverlay(legalOverlay));
closeLegal.addEventListener('click', ()=> closeOverlay(legalOverlay));
legalOverlay.addEventListener('click', (e)=> { if(e.target === legalOverlay) closeOverlay(legalOverlay); });

// Contact
openContact.addEventListener('click', ()=> openOverlay(contactOverlay));
closeContact.addEventListener('click', ()=> closeOverlay(contactOverlay));
contactOverlay.addEventListener('click', (e)=> { if(e.target === contactOverlay) closeOverlay(contactOverlay); });

// ESC closes overlays
document.addEventListener('keydown', (e)=> {
  if(e.key === 'Escape') {
    [extraOverlay, premiumOverlay, faqOverlay, privacyOverlay, termsOverlay, 
     supportOverlay, legalOverlay, contactOverlay].forEach(o => closeOverlay(o));
  }
});

/* ---------------------------
   Active users - natural updates
   --------------------------- */
const activeUsersEl = document.getElementById('activeUsers');
let active = 8378;
function formatNum(n){ return n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); }
activeUsersEl.textContent = `${formatNum(active)} / 98,623`;

function updateActive(){
  let r = Math.random();
  let delta = Math.floor((Math.random()*360) - 180); // -180..+180
  if(r > 0.95) delta += Math.floor(Math.random()*3000); // occasional jump
  active = Math.max(8300, Math.min(100000, active + delta));
  activeUsersEl.textContent = `${formatNum(active)} / 98,623`;
}
setInterval(updateActive, 6000);

/* ---------------------------
   Referral card & reward interactions
   --------------------------- */
const refCards = Array.from(document.querySelectorAll('.ref-card'));
let selectedStage = null;
refCards.forEach(card=>{
  card.addEventListener('click', ()=>{
    refCards.forEach(c=>c.classList.remove('active'));
    card.classList.add('active');
    selectedStage = card.getAttribute('data-stage');
    document.getElementById('refResult').textContent = `Selected tier: ${selectedStage}`;
  });
});

/* reward selection */
const rewardBtns = Array.from(document.querySelectorAll('.reward'));
let selectedReward = 'play';
rewardBtns.forEach(b=>{
  b.addEventListener('click', ()=>{
    rewardBtns.forEach(x=>x.classList.remove('active'));
    b.classList.add('active');
    selectedReward = b.getAttribute('data-type');
  });
});

/* simulate in Extra Bonus: behavior per user's request:
   - If user enters 20 OR clicks simulate without other number -> show exact message:
     "If you add 20 people, you can earn тВ╣7000"
   - If user enters another number, prompt to try 20 (no formula)
*/
document.getElementById('simulateRef').addEventListener('click', ()=>{
  const val = Number(document.getElementById('refInput').value || 0);
  const out = document.getElementById('refResult');
  if(val === 20){
    out.textContent = "If you add 20 people, you can earn тВ╣7000";
  } else if(val === 0){
    out.textContent = "Sample: If you add 20 people, you can earn тВ╣7000";
  } else {
    out.textContent = "Try entering 20 to see the sample: 20 referrals тЖТ тВ╣7000";
  }
});

/* Premium simulate тАФ when clicked show the exact message (as requested) */
document.getElementById('premiumSimBtn').addEventListener('click', ()=>{
  document.getElementById('premiumSimRes').textContent = "If you add 20 people, you can earn тВ╣7000";
});

/* ---------------------------
   Smooth scroll behavior for header nav anchors
   --------------------------- */
document.getElementById('navHome').addEventListener('click', (e)=> { 
  e.preventDefault();
  closeAllOverlays(); 
  document.getElementById('home').scrollIntoView({behavior:'smooth'}); 
});
document.getElementById('navServices').addEventListener('click', (e)=> { 
  e.preventDefault();
  closeAllOverlays(); 
  document.getElementById('services').scrollIntoView({behavior:'smooth'}); 
});
document.getElementById('navAbout').addEventListener('click', (e)=> { 
  e.preventDefault();
  closeAllOverlays(); 
  document.getElementById('about').scrollIntoView({behavior:'smooth'}); 
});

function closeAllOverlays(){
  [extraOverlay, premiumOverlay, faqOverlay, privacyOverlay, termsOverlay,
   supportOverlay, legalOverlay, contactOverlay].forEach(o => { 
     o.classList.remove('active'); 
     o.setAttribute('aria-hidden','true'); 
   });
  document.body.style.overflow = 'auto';
}

/* ---------------------------
   Animated neon background (canvas) - mobile-friendly, light-weight
   --------------------------- */
(function initCanvas(){
  const canvas = document.getElementById('bgCanvas');
  const ctx = canvas.getContext('2d');
  let w = canvas.width = innerWidth;
  let h = canvas.height = innerHeight;
  const num = Math.max(12, Math.floor((w*h)/120000)); // scale number by screen size
  const dots = [];
  for(let i=0;i<num;i++){
    dots.push({
      x: Math.random()*w,
      y: Math.random()*h,
      vx: (Math.random()-0.5)*0.6,
      vy: (Math.random()-0.5)*0.6,
      r: 1 + Math.random()*2,
      glow: 20 + Math.random()*30
    });
  }
  function resize(){ w = canvas.width = innerWidth; h = canvas.height = innerHeight; }
  addEventListener('resize', resize);

  function draw(){
    ctx.clearRect(0,0,w,h);
    // faint gradient overlay for depth
    const g = ctx.createLinearGradient(0,0,w,h);
    g.addColorStop(0, 'rgba(0,0,0,0.0)');
    g.addColorStop(1, 'rgba(0,0,0,0.2)');
    ctx.fillStyle = g;
    ctx.fillRect(0,0,w,h);

    // draw lines between close dots
    for(let i=0;i<dots.length;i++){
      const a = dots[i];
      for(let j=i+1;j<dots.length;j++){
        const b = dots[j];
        const dx = a.x-b.x, dy = a.y-b.y;
        const dist = Math.sqrt(dx*dx + dy*dy);
        if(dist < 140){
          const alpha = 0.08 * (1 - dist/140);
          ctx.strokeStyle = `rgba(255,216,0,${alpha})`;
          ctx.lineWidth = 1;
          ctx.beginPath();
          ctx.moveTo(a.x,a.y);
          ctx.lineTo(b.x,b.y);
          ctx.stroke();
        }
      }
    }

    // draw dots with glow
    for(const d of dots){
      d.x += d.vx; d.y += d.vy;
      if(d.x < -20) d.x = w+20;
      if(d.x > w+20) d.x = -20;
      if(d.y < -20) d.y = h+20;
      if(d.y > h+20) d.y = -20;

      const rad = ctx.createRadialGradient(d.x,d.y,0,d.x,d.y,d.glow);
      rad.addColorStop(0, 'rgba(255,216,0,0.28)');
      rad.addColorStop(0.2, 'rgba(255,216,0,0.12)');
      rad.addColorStop(1, 'rgba(255,216,0,0)');
      ctx.fillStyle = rad;
      ctx.beginPath();
      ctx.arc(d.x,d.y,d.r*2,0,Math.PI*2);
      ctx.fill();
    }
    requestAnimationFrame(draw);
  }
  draw();
})();

</script>
</body>
</html>
